@using Microsoft.AspNet.Identity
@using DevTeamup.Models.Extensions

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="notifications">
                <a href="#">
                    <i class="glyphicon glyphicon-bell"></i>
                    <span class="badge js-notifications-count hide"></span>
                </a>
            </li>
            <li>
                <span class="logged-user-image"><img src="@Url.Action("UserImages", "Home")" height="35" width="35" /></span> 
            </li>
            <li class="dropdown">           
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserFirstname() <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("Contributing", "Teamups")">Teamups I'm Contributing</a></li>
                    <li><a href="@Url.Action("Favoring", "Teamups")">My Favorite Teamups</a></li>
                    <li><a href="@Url.Action("Mine", "Teamups")">Teamups I'm Hosting</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
