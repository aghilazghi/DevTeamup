<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DevTeamup</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DevTeamup", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add a Teamup", "Create", "Teamups")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Amine Ghilazghi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)

<script type="text/x-underscore-template" id="notifications-template">
    <ul class="notifications">
        <%
            _.each(notifications, function(notification) {
                if(notification.notificationType == 3) { %>
                <li><span class="bold-highlight"><%= notification.teamup.organizer.firstName %> <%= notification.teamup.organizer.lastName %></span>  has canceled the teamup at <span class="italic-highlight"><%= notification.teamup.address %></span> on <span class="highlight"> <%= moment(notification.teamup.dateTime).format("MMM D YYYY hh:mm A") %></span></li>
                <%}

                else if (notification.notificationType == 2) {
                    var changes = [],
                        originalValues = [],
                        newValues = [];

                    if (notification.originalDateTime != notification.teamup.dateTime) {
                        changes.push('date/time');
                        originalValues.push(moment(notification.originalDateTime).format("MMM D YYYY hh:mm A"));
                        newValues.push(moment(notification.teamup.dateTime).format("MMM D YYYY hh:mm A"));
                    }
        
                    if (notification.originalAddress != notification.teamup.address) {
                        changes.push('address');
                        originalValues.push(notification.originalAddress);
                        newValues.push(notification.teamup.address);
                    }
                    %>
                        <li> <span class="bold-highlight"><%= notification.teamup.organizer.firstName %> <%= notification.teamup.organizer.lastName %></span>  has changed the <span class="italic-highlight"><%= changes.join(' and ') %></span> of the teamup from <span class="italic-highlight"><%= originalValues.join(' / ') %></span> to <span class="bold-highlight"><%= newValues.join(' / ') %></span></li>
                    <%
                }

                })
        %>
    </ul>
</script>
<script>
    $(document).ready(function() {
        $.getJSON("/api/notifications",
            function (notifications) {

                if (notifications.length == 0)
                    return;

                $(".js-notifications-count")
                    .text(notifications.length)
                    .removeClass("hide")
                    .addClass("flip");

                $(".notifications").popover({
                    html: true,
                    title: "Notifications",
                    content: function () {
                        var compiled = _.template($("#notifications-template").html());
                        return  compiled({ notifications: notifications });
                    },
                    placement: "bottom",
                    template: '<div class="popover popover-notifications" role="tooltip"><div class="arrow"></div><h3 class="popover-title"></h3><div class="popover-content"></div></div>'
                }).on("shown.bs.popover", function() {
                    $.post("/api/notifications/markAsRead")
                        .done(function() {
                            $(".js-notifications-count")
                                .text("")
                                .addClass("hide");
                            toastr.success("Your notifications have been marked as read.");
                        });
                });

            });
    });
</script>
    

</body>
</html>
